/**index.wxss**/
page {
  background-color: #ffffff;
}

.container {
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #FFF7E6;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  color: #D4001A;
  font-weight: bold;
  margin-bottom: 20rpx;
  font-family: "华文行楷", "楷体", sans-serif;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
}

.subtitle {
  display: block;
  font-size: 36rpx;
  color: #FF4D4F;
  font-family: "华文楷体", "楷体", sans-serif;
}

.input-section {
  margin: 40rpx 0;
  padding: 30rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.name-input {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  border: 2rpx solid #FFD8D8;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  background: #FFFFFF;
  box-sizing: border-box;
}

.generate-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #FF4D4F 0%, #D4001A 100%);
  color: white;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
  text-align: center;
  box-shadow: 0 4rpx 8rpx rgba(212, 0, 26, 0.2);
}

.generate-btn.disabled {
  background: #CCCCCC;
  box-shadow: none;
}

.blessing-section {
  margin-top: 40rpx;
  padding: 40rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.blessing-title {
  text-align: center;
  font-size: 36rpx;
  color: #D4001A;
  font-weight: bold;
  margin-bottom: 30rpx;
  font-family: "华文楷体", "楷体", sans-serif;
}

.poem-content {
  padding: 20rpx;
}

.poem-couplet {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.poem-line {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.8;
  font-family: "华文楷体", "楷体", sans-serif;
  text-align: center;
  margin: 10rpx 0;
}

.banner {
  width: 100%;
  height: 200px;
}

.content {
  padding: 20px;
}

.input-box {
  width: 100%;
  height: 96rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 0 32rpx;
  font-size: 32rpx;
  color: #333333;
}

.placeholder {
  color: #999999;
}

.button-group {
  width: 100%;
  margin-top: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.share-btn {
  width: 90%;
  height: 88rpx;
  background: #07c160;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 8rpx rgba(7, 193, 96, 0.2);
}

.share-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.blessing-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  text-align: center;
  white-space: pre-wrap;
}

.blessing-card {
  background: #fff5f5;
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333333;
  text-align: justify;
  box-shadow: 0 4rpx 16rpx rgba(212, 0, 26, 0.08);
}
